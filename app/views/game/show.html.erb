<h1 id="movetext">テキスト</h1>
<button id="movebtn">そんな動くのΣ（・□・；）</button>


<script>
  $('#movetext').text('ぐゎぐゎ');

  $('#movebtn').on('click', () => {
    $('h1').css('color', 'red');
    $('h1').animate({left: '80%'}, 1000);
    $('h1').animate({left: '40%'}, 1500);
    $('h1').animate({fontSize: '8em'}, 500);
    $('h1').animate({left: '60%',top: '40%'}, 300);
    $('h1').animate({left: 0,top: 0,fontSize: '1em'}, 1000);
  })
</script>