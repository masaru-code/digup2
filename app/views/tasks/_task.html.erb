  <div class="card bg-light d-inline-block text-wrap h-100 mx-1 task-card"
    data-model_name="<%= Task.model_name.singular %>"
    data-id="<%= task.id %>">
    <div class="d-flex flex-column h-100" style="width: 35rem; min-width: 25rem;">
      <div class="font-weight-bold px-4 py-2 task-header">
        <div class="pr-5">
          <%= task.name %> 
        </div>
        <div class="text-right position-absolute" style="top: 4px; right: 4px">
          <%= link_to(new_task_todo_path(task), title: "New TODO", class: "btn px-0", remote: true) do %><i class="fas fa-plus align-middle"></i><% end %>
          <div class="btn-group">
            <button type="button" class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-ellipsis-v align-middle"></i>
            </button>
            <div class="dropdown-menu dropdown-menu-right text-middle">
              <%= link_to "Edit", edit_task_path(task), class: "dropdown-item", remote: true %>
            </div>
          </div>
        </div>
      </div>
      <div class="card-body px-2 pb-2 pt-0 overflow-auto todo-cards">
        <%= render partial: "todos/todo", collection: task.todos, as: :todo %>
      </div>
    </div>
    <%= link_to "全行程終了", task_path(task), method: :patch, class: "btn btn-primary" %>
  </div>